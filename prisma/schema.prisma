generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Engine {
  id           Int        @id() @default(autoincrement())
  name         String     @unique
  displacement Int
  horsepower   Int
  torque       Float
  car          CarModel[]

  @@map("engine")
}

model CarModel {
  id       Int    @id() @default(autoincrement())
  model    String
  price    Float
  engineId Int
  engine   Engine @relation(fields: [engineId], references: [id])

  @@map("carModel")
}
